<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Blogs</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <div class="container-fluid">
    <div class="row">
       <%- include('partials/navbar') %>


      <!-- Main Content -->
      <main class="col-md-10 p-4">
        <h1 class="mb-4">ðŸ“š All Public Approved Blogs</h1>

        <% if (blogs.length === 0) { %>
          <p>No blogs found.</p>
        <% } else { %>
          <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% blogs.forEach(blog => { %>
              <div class="col">
                <div class="card h-100 shadow-sm">
                  <img src="<%= blog.image %>" class="card-img-top" alt="Blog Image" style="height: 200px; object-fit: cover;">
                  <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><%= blog.title %></h5>
                    <p class="card-text"><%= blog.description.substring(0, 100) %>...</p>
                    <p class="text-muted mb-2">
                      <small>
                        By <%= blog.User?.name || 'Unknown' %> | Sector: <%= blog.Sector?.name || 'N/A' %>
                      </small>
                    </p>
                    <a href="/blogs/blogs/<%= blog.id %>" class="btn btn-outline-primary mt-auto">Read More</a>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </main>
    </div>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
