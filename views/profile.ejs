<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Profile - Blogify</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <!-- Navbar -->
  <%- include('partials/navbar') %>

  <div class="container-fluid">
    <div class="row">
      
      <!-- Sidebar -->
      <aside class="col-md-2 bg-light p-3 min-vh-100">
        <%- include('partials/sidebar') %>
      </aside>

      <!-- Main Content -->
      <main class="col-md-10 py-5 px-4">
        <h2 class="mb-4">ðŸ‘¤ Profile</h2>

        <div class="card shadow-sm">
          <div class="row g-0">
            <div class="col-md-4 text-center p-4">
              <% if (user.image) { %>
                <img src="<%= user.image %>" alt="Profile Picture" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
              <% } else { %>
                <img src="https://via.placeholder.com/150" alt="No Image" class="img-fluid rounded-circle">
              <% } %>
              <h4 class="mt-3"><%= user.name %></h4>
              <p class="text-muted">(<%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %>)</p>
            </div>

            <div class="col-md-8">
              <div class="card-body">
                <p><strong>Email:</strong> <%= user.email %></p>
                <p><strong>Role:</strong> <%= user.role %></p>

                <% if (user.role === 'admin' && user.sectors && user.sectors.length > 0) { %>
                  <p><strong>Assigned sectors:</strong></p>
                  <ul>
                    <% user.sectors.forEach(sector => { %>
                      <li><%= sector.name %></li>
                    <% }) %>
                  </ul>
                <% } %>

              <a href="/users/editProfile/<%= user.id %>" class="btn btn-primary">Edit profile</a>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
