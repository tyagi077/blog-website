<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Create Blog - Blogify</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container-fluid">
    <div class="row min-vh-100">
      <!-- Sidebar -->
      <aside class="col-md-2 bg-light p-3">
        <%- include('partials/sidebar') %>
      </aside>

      <!-- Main Content -->
      <main class="col-md-10 p-4">
        <h2 class="mb-4">Create New Blog</h2>

        <form action="/blogs/create" method="POST" enctype="multipart/form-data" class="bg-white p-4 rounded shadow-sm">
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" required>
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" name="description" rows="6" required></textarea>
          </div>

          <div class="mb-3">
            <label for="image" class="form-label">Image Upload</label>
            <input type="file" class="form-control" id="image" name="image" accept="image/*">
          </div>

          <div class="mb-3">
            <label for="sector_id" class="form-label">Select Sector</label>
            <select class="form-select" id="sector_id" name="sector_id" required>
              <% sectors.forEach(sector => { %>
                <option value="<%= sector.id %>"><%= sector.name %></option>
              <% }) %>
            </select>
          </div>

          <div class="mb-3">
            <label for="scope" class="form-label">Visibility</label>
            <select class="form-select" id="scope" name="scope" required>
              <option value="public">Public</option>
              <option value="private">Private</option>
            </select>
          </div>

          <button type="submit" class="btn btn-primary">Submit Blog</button>
        </form>
      </main>
    </div>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
