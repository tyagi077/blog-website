<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Create Blog - Blogify</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<style>
  img{
    width: 170px;
  }
</style>
<body>
  <div class="container-fluid">
    <div class="row min-vh-100">
      <!-- Sidebar -->
      <aside class="col-md-2 bg-light p-3">
        <%- include('partials/sidebar') %>
      </aside>

      <!-- Main Content -->
      <main class="col-md-10 p-4">
       <h2 class="mb-4"><%= blog ? 'Edit Blog' : 'Create New Blog' %></h2>

<form action="<%= blog ? '/blogs/blogs/update/' + blog.id : '/blogs/create' %>" method="POST" enctype="multipart/form-data" class="bg-white p-4 rounded shadow-sm">
  
  <!-- Title -->
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input type="text" class="form-control" id="title" name="title" value="<%= blog ? blog.title : '' %>" required>
  </div>

  <!-- Description -->
  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea class="form-control" id="description" name="description" rows="6" required><%= blog ? blog.description : '' %></textarea>
  </div>

  <!-- Image -->
  <div class="mb-3">
    <label for="image" class="form-label">Image Upload</label>

    <!-- Existing Image Preview (if editing) -->
 
    <!-- File Input -->
    <input type="file" class="form-control" id="image" name="image" accept="image/*" >

       <% if (blog && blog.image) { %>
      <img id="preview" src="<%= blog.image %>" alt="Current Image" style="max-width: 100%; max-height: 200px; margin-bottom: 10px;" />
    <% } else { %>
      <img id="preview" src="" alt="Selected Image" style="max-width: 100%; max-height: 200px; display: none; margin-bottom: 10px;" />
    <% } %>

  </div>

  <!-- Image Preview Script -->
  <script>
    const imageInput = document.getElementById('image');
    const preview = document.getElementById('preview');

    imageInput.addEventListener('change', function () {
      const file = this.files[0];

      if (file) {
        const reader = new FileReader();

        reader.onload = function (e) {
          preview.src = e.target.result;
          preview.style.display = 'block';
        };

        reader.readAsDataURL(file);
      } else {
        preview.src = '';
        preview.style.display = 'none';
      }
    });
  </script>

  <!-- Sector Dropdown -->
  <div class="mb-3">
    <label for="sector_id" class="form-label">Select Sector</label>
    <select class="form-select" id="sector_id" name="sector_id" required>
      <% sectors.forEach(sector => { %>
        <option value="<%= sector.id %>" <%= blog && blog.sector_id === sector.id ? 'selected' : '' %>><%= sector.name %></option>
      <% }) %>
    </select>
  </div>

  <!-- Scope Dropdown -->
  <div class="mb-3">
    <label for="scope" class="form-label">Visibility</label>
    <select class="form-select" id="scope" name="scope" required>
      <option value="public" <%= blog && blog.scope === 'public' ? 'selected' : '' %>>Public</option>
      <option value="private" <%= blog && blog.scope === 'private' ? 'selected' : '' %>>Private</option>
    </select>
  </div>

  <button type="submit" class="btn btn-primary"><%= blog ? 'Update Blog' : 'Submit Blog' %></button>
</form>

      </main>
    </div>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
