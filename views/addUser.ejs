<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add User - Blogify</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <aside class="col-md-2 bg-light p-3 min-vh-100">
        <%- include('partials/sidebar') %>
      </aside>

      <!-- Main Content -->
      <main class="col-md-10 p-5">
        <div class="card shadow-sm">
          <div class="card-header">
            <h3 class="mb-0">Add New User</h3>
          </div>
          <div class="card-body">
            <form action="/users/add-user" method="POST" enctype="multipart/form-data">
              <div class="mb-3">
                <label for="name" class="form-label">Name:</label>
                <input type="text" id="name" name="name" class="form-control" required>
              </div>

              <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="email" id="email" name="email" class="form-control" required>
              </div>

              <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <input type="password" id="password" name="password" class="form-control" required>
              </div>

              <div class="mb-3">
                <label for="image" class="form-label">Profile Image:</label>
                <input type="file" id="image" name="image" class="form-control" accept="image/*">
              </div>

              <div class="mb-3">
                <label for="role" class="form-label">Role:</label>
                <select id="role" name="role" class="form-select" required onchange="toggleSectorDropdown()">
                  <option value="user">User</option>
                  <option value="admin">Admin</option>
                </select>
              </div>

              <!-- Sector checkboxes shown only if Admin -->
              <div class="mb-3" id="sector-group" style="display: none;">
                <label class="form-label">Assign Sectors:</label>
                <div class="row">
                  <% sectors.forEach(sector => { %>
                    <div class="col-md-4">
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="sectors[]" id="sector_<%= sector.id %>" value="<%= sector.id %>">
                        <label class="form-check-label" for="sector_<%= sector.id %>">
                          <%= sector.name %>
                        </label>
                      </div>
                    </div>
                  <% }) %>
                </div>
              </div>

              <button type="submit" class="btn btn-primary">Add User</button>
            </form>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

 <script>
  function toggleSectorDropdown() {
    const role = document.getElementById('role').value;
    const sectorGroup = document.getElementById('sector-group');
    sectorGroup.style.display = role === 'admin' ? 'block' : 'none';
  }

  // ðŸ‘‡ Run this on page load to show sectors if "admin" is pre-selected
  window.onload = toggleSectorDropdown;
</script>

</body>
</html>
